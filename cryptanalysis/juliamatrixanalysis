newdiff=[];
for i in 1:k 
push!(newdiff,randn(d,d));
end;

der=(f(matrixnetwork+newdiff*delta)-f(matrixnetwork))/delta;
twoder=(f(matrixnetwork+2*newdiff*delta)-f(matrixnetwork))/(2*delta);

if abs(der/twoder)>1.1 || abs(twoder/der)>1.1
delta=delta*0.50;
end;
delta=delta*1.01;

for ark in 1:10
