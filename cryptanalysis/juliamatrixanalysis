newbottomeigenvector=newbottomeigenvector+bb[i]*bottomeigenvector*adjoint(bb[i]);
end;
topeigenvector=newtopeigenvector/norm(newtopeigenvector);
bottomeigenvector=newbottomeigenvector/norm(newbottomeigenvector);

